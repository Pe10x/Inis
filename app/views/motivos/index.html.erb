<p id="notice"><%= notice %></p>

<!DOCTYPE html>
<html lang="en">
<head>
  <title>Listado de motivos</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
   <center><h1>Listado de motivos</h1></center>          
  <table class="table table-hover">
    <thead>
      <tr>
        <th><h2> Tipo </h2></th>
        <th colspan="3"></th>
      </tr>
    </thead>
   <tbody>
    <% @motivos.each do |motivo| %>
      <tr>
        <td><%= motivo.tipo %></td>
        
        <td><%= link_to 'Modificar', edit_motivo_path(motivo),class:'btn btn-success' %></td>
        <td><%= link_to 'Eliminar', motivo,class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <%= link_to 'Nuevo', new_motivo_path,class:'btn btn-primary' %>
</div>

</body>
</html>